# Development Environment Variables
# Copy this file to .env.development and fill in your actual values
# DO NOT commit .env.development to git!

# Node Environment
NODE_ENV=development

# Server Port
PORT=3000

# Azure Cosmos DB Configuration
# Option 1: Use connection string
AZURE_COSMOS_CONNECTION_STRING=AccountEndpoint=https://your-cosmos-account.documents.azure.com:443/;AccountKey=your-key-here;
# Option 2: Use endpoint and key separately
COSMOS_DB_ENDPOINT=https://your-cosmos-account.documents.azure.com:443/
COSMOS_DB_KEY=your-cosmos-key-here
COSMOS_DB_NAME=CloudPixDB

# Azure Blob Storage Configuration
AZURE_BLOB_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your-storage-account;AccountKey=your-key-here;EndpointSuffix=core.windows.net
BLOB_CONTAINER_NAME=cloudpix-files

# JWT Configuration
JWT_SECRET=your-secret-key-change-this-in-development
JWT_EXPIRY=3650d

# Application Insights (Optional)
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=your-key-here;IngestionEndpoint=https://your-region.in.applicationinsights.azure.com/

# Frontend URL (for CORS and share link generation)
FRONTEND_URL=http://localhost:5173
